{% extends "base_en.twig" %}

{% block style %}
<link rel="stylesheet" href="css/vtt.css">
{% endblock style %}

{% block main %}
<section>

    <article>
        <h2>{{titres_articles.nom1}}</h2>
        <p>
            {{textes.numeros1}}
        </p>
    </article>

    <article>
        <h2>{{titres_articles.nom2}}</h2>
        <table role="presentation">
            <thead>
                <tr>
                    <th>Advantages</th>
                    <th>Disadvantages</th>
                </tr>
            </thead>
            <tbody>
                {% for contenutableaux in tableaux %}
                <tr>
                    <td>{{contenutableaux.avantage}}</td>
                    <td>{{contenutableaux.inconvenient}}</td>
                </tr>
                {% endfor %}
                <tr>
                    <td colspan="2">{{conclusion}}</td>
                </tr>
            </tbody>
        </table>
    </article>

    <article>
        <h2>{{titres_articles.nom3}}</h2>
        <p>
            {{textes.numeros2}}
        </p>
    </article>

    <article>
        <h2>{{titres_articles.nom4}}</h2>
        <div class="item-conteneur">
            {% for choix in noschoix %}
            <div class="item">
                <img src="{{choix.image}}" alt="{{choix.alt}}">
                <h3>{{choix.budget}}</h3>
                <p>
                    {{choix.texte}}
                </p>
                <a href="{{choix.lien}}" target="_blank">See the product</a>
            </div>
            {% endfor %}
        </div>
    </article>

</section>
<aside>
    <h1>Our magazines :</h1>
    {% for element in aside %}
    <img src="{{element.image}}" alt="{{element.alt}}">
    {% endfor %}
</aside>

{% endblock main %}